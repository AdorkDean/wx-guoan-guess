.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 90rpx;
  height: 90rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: black;
  font-size: 130%;
}

.usermotto {
  margin-top: 200px;
}
.ranking_view{
  margin-top: 20px;
  margin-bottom: 20px;
  border-radius: 5px;
  background-color: lightgray;
  padding: 10px 10px 10px 10px;
}
.my_rankinfo{
  flex-direction: column;
}
.ranking-row{
  display: flex;
  padding: 5rpx;
  width: 100%;
  box-sizing: border-box
}
.ranking_text{
  color:dimgray;
  font-size: 100%;
}
.score_text{
  font-size: 220%;
  color: orange;
  text-align: right;
}